@using PagedList.Mvc
@using PagedList
@model PagedList.IPagedList<ModelEF.Model.UserAccount>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý người Dùng</h2>

@using (Html.BeginForm())
{
    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            @Html.ActionLink("Tạo mới ", "Create", "User", new { @class = "btn btn-danger" })
        </div>
        
            <div class=" col-md-4">
                <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa cần tìm kiếm" class="form-control" />
            </div>
            <div class="col-md-2">
                <input type="submit" value=" Tìm Kiếm" class="btn btn-default" />
            </div>
        
        
    </div>
}
<div class="col-lg-12 form-group">
    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                UserName
            </th>
            <th>
                Password
            </th>
            <th>
                Statsus
            </th>
            <th>
                Delete
            </th>
        </tr>
        @{ var i = 1;}
        @foreach (var item in Model)
        {
           
    <tr id="row_@item.ID">
        <td>
            @i
        </td>
        <td>
            @item.UserName
        </td>
        <td>
            @item.Password
        </td>
        <td>
            @item.Status
        </td>
        <td>

 @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
               {
                   Confirm = "Do you wanna delete this User?",
                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                   HttpMethod = "Delete"

               })
                </td>

    </tr>
                
            
            i++;
        }

    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
</div>